{
  "manifest_version": 3,
  "name": "Shopee 商品卡片工具",
  "version": "1.0",
  "description": "點 icon 顯示/隱藏商品表單浮窗",
  "action": {
    "default_title": "新增商品",
    "default_icon": "icon.png"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://localhost:8000/*"],
  "background": {
    "service_worker": "background.js"
  }
}
